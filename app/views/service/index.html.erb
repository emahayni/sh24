<h1>Postcode Service Status</h1>

<form action="check" method="get" id='postcodes-form'>

<div>
	<p>Please enter a valid UK postcode:</p>
	<input type="text" name="pcode" value="<%= @pcode %>" placeholder="UK postcode">
</div>
<div class="">
	<button type="submit" id='service-check'>Check</button>
	<br/>
</div>
<br>

<% if !@pcode.blank? %>
	Result: <%= @result %>
<% end %>
<br>

<% if !@error.blank? %>
	Error: <%= @error %>
<% end %>
<br>

<br>
<%= link_to 'Home', welcome_index_path %> 